{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "app:start": "./vendor/bin/sail up -d",
        "app:stop": "./vendor/bin/sail down",
        "app:ssh": "./vendor/bin/sail shell",
        "app:reboot": "./vendor/bin/sail down && ./vendor/bin/sail up -d",
        "app:containers remove": "docker container rm $(docker container ls -aq)"
        
    },
    "devDependencies": {
        "axios": "^0.25",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14"
    }
}
